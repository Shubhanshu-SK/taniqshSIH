  <title>About Us | Syntax Sena</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      background: #f8f9fa;
      color: #333;
    }

    /* Navbar */
    header {
      background: #0077b6;
      padding: 15px 30px;
    }
    header nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    header h1 {
      color: white;
      font-size: 22px;
    }
    nav ul {
      list-style: none;
      display: flex;
      gap: 20px;
    }
    nav ul li a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.3s ease;
    }
    nav ul li a:hover {
      color: #ffd60a;
    }

    /* Page Title */
    .page-title {
      text-align: center;
      padding: 40px 20px 20px;
    }
    .page-title h2 {
      font-size: 28px;
      color: #0077b6;
    }
    .page-title p {
      font-size: 16px;
      margin-top: 10px;
      color: #555;
    }

    /* Team Section */
    .team-section {
      padding: 40px 20px;
      max-width: 900px;
      margin: auto;
    }
    .team-section h3 {
      font-size: 24px;
      margin-bottom: 20px;
      color: #0077b6;
      text-align: center;
    }
    .team-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      text-align: center;
    }
    .team-member {
      background: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }
    .team-member:hover {
      transform: translateY(-5px);
    }
    .team-member h4 {
      font-size: 18px;
      color: #0077b6;
      margin-bottom: 8px;
    }

    /* Contact Section */
    .contact-section {
      padding: 40px 20px;
      background: #e9f5ff;
      text-align: center;
    }
    .contact-section h3 {
      font-size: 22px;
      color: #0077b6;
      margin-bottom: 15px;
    }
    .contact-section p {
      font-size: 15px;
      margin: 5px 0;
    }
    .contact-section a {
      color: #0077b6;
      text-decoration: none;
      font-weight: bold;
    }

    /* Footer */
    footer {
      background: #023e8a;
      color: white;
      text-align: center;
      padding: 20px;
      margin-top: 30px;
    }
    footer p {
      margin: 5px 0;
      font-size: 14px;
    }
    footer a {
      color: #ffd60a;
      text-decoration: none;
    }
    footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>
